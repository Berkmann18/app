{
  "name": "pr-label",
  "version": "0.0.0-development",
  "description": "Check pull request status",
  "main": "index.js",
  "scripts": {
    "deploy": "scripts/deploy.sh",
    "start": "probot run ./index.js",
    "now-start": "PRIVATE_KEY=$(echo $PRIVATE_KEY | base64 -d) npm start",
    "commit": "git-cz",
    "test": "npm run posttest",
    "posttest": "standard",
    "precommit": "npm test",
    "prepush": "npm test",
    "commitmsg": "validate-commit-msg",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sotayamashita/pr-label.git"
  },
  "keywords": [
    "probot",
    "GitHub App",
    "pull request",
    "label"
  ],
  "author": "Sam Yamashita",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sotayamashita/pr-label/issues"
  },
  "homepage": "https://github.com/sotayamashita/pr-label#readme",
  "dependencies": {
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "localtunnel": "^1.8.3",
    "probot": "^3.0.2",
    "standard": "^10.0.3",
    "validate-commit-msg": "^2.14.0"
  },
  "devDependencies": {
    "semantic-release": "^8.2.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "now": {
    "alias": "wip-bot",
    "env": {
      "APP_ID": "@pr-label-app-id",
      "NODE_ENV": "production",
      "PRIVATE_KEY": "@pr-label-private-key",
      "WEBHOOK_SECRET": "@pr-label-webhook-secret"
    }
  }
}
